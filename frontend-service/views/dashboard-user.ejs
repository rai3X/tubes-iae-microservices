<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard User - E-Commerce</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <h2>üõçÔ∏è E-Commerce</h2>
            </div>
            <div class="nav-menu">
                <span class="nav-user">üë§ <%= user.name %> (user)</span>
                <form action="/logout" method="POST" style="display: inline;">
                    <button type="submit" class="btn-logout">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error">
            <strong>‚ùå Error:</strong> <%= error %>
        </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success">
            <strong>‚úÖ Success:</strong> <%= success %>
        </div>
        <% } %>

        <div class="dashboard">
            <div class="dashboard-header">
                <h1>Dashboard User</h1>
                <p>Selamat datang, <strong><%= user.name %></strong>!</p>
            </div>

            <div class="dashboard-content">
                <section class="section">
                    <h2>üì¶ Daftar Produk</h2>
                    <div class="products-grid">
                        <% if (products && products.length > 0) { %>
                            <% products.forEach(product => { %>
                                <div class="product-card">
                                    <h3><%= product.name %></h3>
                                    <div class="product-info">
                                        <p class="product-price">Rp <%= parseInt(product.price).toLocaleString('id-ID') %></p>
                                        <p class="product-stock">Stok: <%= product.stock %></p>
                                    </div>
                                    <% if (product.stock > 0) { %>
                                    <form action="/order/create" method="POST" class="order-form">
                                        <input type="hidden" name="product_id" value="<%= product.id %>">
                                        <input type="number" name="quantity" min="1" max="<%= product.stock %>" value="1" required class="quantity-input">
                                        <button type="submit" class="btn btn-success">Beli</button>
                                    </form>
                                    <% } else { %>
                                    <p class="out-of-stock">Stok Habis</p>
                                    <% } %>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p class="empty-state">Tidak ada produk tersedia</p>
                        <% } %>
                    </div>
                </section>

                <section class="section">
                    <h2>üõí Pesanan Saya</h2>
                    <% if (orders && orders.length > 0) { %>
                    <div class="orders-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Produk</th>
                                    <th>Quantity</th>
                                    <th>Harga</th>
                                    <th>Total</th>
                                    <th>Tanggal</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(order => { %>
                                    <tr>
                                        <td>#<%= order.id %></td>
                                        <td><%= order.product_name %></td>
                                        <td><%= order.quantity %></td>
                                        <td>Rp <%= parseInt(order.price).toLocaleString('id-ID') %></td>
                                        <td>Rp <%= parseInt(order.total_price).toLocaleString('id-ID') %></td>
                                        <td><%= new Date(order.created_at).toLocaleDateString('id-ID') %></td>
                                        <td>
                                            <form action="/order/delete" method="POST" style="display: inline;">
                                                <input type="hidden" name="order_id" value="<%= order.id %>">
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Hapus order ini?')">Hapus</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <p class="empty-state">Belum ada pesanan</p>
                    <% } %>
                </section>
            </div>
        </div>
    </div>
</body>
</html>
