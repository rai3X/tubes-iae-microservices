<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Seller - E-Commerce</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <h2>üõçÔ∏è E-Commerce</h2>
            </div>
            <div class="nav-menu">
                <span class="nav-user">üë§ <%= user.name %> (seller)</span>
                <form action="/logout" method="POST" style="display: inline;">
                    <button type="submit" class="btn-logout">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error">
            <strong>‚ùå Error:</strong> <%= error %>
        </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success">
            <strong>‚úÖ Success:</strong> <%= success %>
        </div>
        <% } %>

        <div class="dashboard">
            <div class="dashboard-header">
                <h1>Dashboard Seller</h1>
                <p>Selamat datang, <strong><%= user.name %></strong>!</p>
            </div>

            <div class="dashboard-content">
                <section class="section">
                    <h2>‚ûï Tambah Produk Baru</h2>
                    <form action="/product/create" method="POST" class="product-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="name">Nama Produk</label>
                                <input type="text" id="name" name="name" required placeholder="Nama Produk">
                            </div>
                            <div class="form-group">
                                <label for="price">Harga</label>
                                <input type="number" id="price" name="price" min="1" required placeholder="Harga">
                            </div>
                            <div class="form-group">
                                <label for="stock">Stok</label>
                                <input type="number" id="stock" name="stock" min="0" required placeholder="Stok">
                            </div>
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <button type="submit" class="btn btn-success">Tambah Produk</button>
                            </div>
                        </div>
                    </form>
                </section>

                <section class="section">
                    <h2>üì¶ Produk Saya</h2>
                    <div class="products-grid">
                        <% if (products && products.length > 0) { %>
                            <% products.forEach(product => { %>
                                <div class="product-card">
                                    <h3><%= product.name %></h3>
                                    <div class="product-info">
                                        <p class="product-price">Rp <%= parseInt(product.price).toLocaleString('id-ID') %></p>
                                        <p class="product-stock">Stok: <%= product.stock %></p>
                                    </div>
                                    <div class="product-actions">
                                        <form action="/product/update-stock" method="POST" class="update-stock-form">
                                            <input type="hidden" name="product_id" value="<%= product.id %>">
                                            <input type="number" name="stock" min="0" value="<%= product.stock %>" required class="stock-input">
                                            <button type="submit" class="btn btn-warning btn-sm">Update Stok</button>
                                        </form>
                                        <form action="/product/delete" method="POST" style="display: inline;">
                                            <input type="hidden" name="product_id" value="<%= product.id %>">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Hapus produk ini?')">Hapus</button>
                                        </form>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p class="empty-state">Belum ada produk. Tambah produk baru di atas!</p>
                        <% } %>
                    </div>
                </section>

                <section class="section">
                    <h2>üõí Pesanan Masuk</h2>
                    <% if (orders && orders.length > 0) { %>
                    <div class="orders-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Produk</th>
                                    <th>Quantity</th>
                                    <th>Harga</th>
                                    <th>Total</th>
                                    <th>Tanggal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(order => { %>
                                    <tr>
                                        <td>#<%= order.id %></td>
                                        <td><%= order.product_name %></td>
                                        <td><%= order.quantity %></td>
                                        <td>Rp <%= parseInt(order.price).toLocaleString('id-ID') %></td>
                                        <td>Rp <%= parseInt(order.total_price).toLocaleString('id-ID') %></td>
                                        <td><%= new Date(order.created_at).toLocaleDateString('id-ID') %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <p class="empty-state">Belum ada pesanan masuk</p>
                    <% } %>
                </section>
            </div>
        </div>
    </div>
</body>
</html>
